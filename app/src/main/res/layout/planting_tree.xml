<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/planting_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/planting_tree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".PlantingTreeActivity"
        >


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/planting_video"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/current_user_total_contributed_text"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/planting_video1" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/leaderboard_crown"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:rotationX="1.5"
            android:rotationY="1.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/leaderboard_title"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/leaderboard_crown" />

        <TextView
            android:id="@+id/workOutPointTextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/workOutPointTextField"
            app:layout_constraintEnd_toEndOf="@+id/planting_video"
            app:layout_constraintStart_toStartOf="@+id/planting_video"
            app:layout_constraintTop_toBottomOf="@+id/planting_video" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/leaderboard_image_first"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintEnd_toEndOf="@+id/leaderboard_crown"
            app:layout_constraintStart_toStartOf="@+id/leaderboard_crown"
            app:layout_constraintTop_toBottomOf="@+id/leaderboard_crown"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/leaderboard1" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/leaderboard_image_third"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toEndOf="@+id/leaderboard_crown"
            app:layout_constraintTop_toBottomOf="@+id/leaderboard_crown"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/leaderboard2" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/leaderboard_image_second"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toStartOf="@+id/leaderboard_crown"
            app:layout_constraintTop_toBottomOf="@+id/leaderboard_crown"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/leaderboard3" />

